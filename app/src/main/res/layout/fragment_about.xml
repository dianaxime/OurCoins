<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".About">
    <ScrollView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text= "This application will help you keep track of your expenses.
            \n You can register your assets and your income to debit your expenses through accounts.
            \n You can record your expenses with date, classifed by category, amount, notes, photo of receipt or purchase.
            \n You can manage groups and see the expenses of all the members of the groups or use it individually."/>
    </ScrollView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    <TextView
            android:text="ABOUT"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14" android:textSize="30sp"
            android:layout_marginTop="20dp"/>
</RelativeLayout>