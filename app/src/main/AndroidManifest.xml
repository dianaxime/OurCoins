<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ourcoins">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".AboutActivity"
                  android:label="About"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".BalanceActivity"
                  android:label="Balance"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".GroupsActivity"
                  android:label="Groups"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".IncomesActivity"
                  android:label="Incomes"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ExpensesActivity"
                  android:label="Expenses"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".StatisticsActivity"
                  android:label="Statistics"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".AccountActivity"
                  android:label="Account"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".HomeActivity"
                android:label="Home"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".Register">
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>