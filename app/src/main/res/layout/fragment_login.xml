<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <TextView
            android:text="SIGN IN"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/SignText" android:textSize="36sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="192dp" android:layout_alignParentEnd="true" android:layout_marginEnd="133dp"
            android:layout_alignParentStart="true" android:layout_marginStart="128dp" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Username"
            android:ems="10"
            android:id="@+id/UserText"
            android:layout_marginTop="55dp" android:layout_alignParentEnd="true" android:layout_marginEnd="99dp"
            android:layout_alignParentStart="true" android:layout_marginStart="99dp"
            android:layout_below="@+id/SignText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PasswordText" android:text="Password"
            android:layout_alignParentEnd="true" android:layout_marginEnd="98dp" android:layout_alignParentStart="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/UserText"/>
    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="51dp" android:id="@+id/LoginButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="150dp" android:layout_alignParentStart="true" android:layout_marginStart="160dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="191dp"
            android:layout_marginTop="60dp" android:layout_below="@+id/PasswordText"/>

</RelativeLayout>