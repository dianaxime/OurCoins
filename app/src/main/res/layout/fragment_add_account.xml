<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AddAccount">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="71dp" android:layout_alignParentTop="true" android:id="@+id/textView9"
            android:layout_marginTop="50dp" android:text="@string/Accname" android:textSize="24sp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="180dp"/>
    <EditText
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_marginEnd="81dp"
            android:id="@+id/editText"
            android:layout_alignParentStart="true" android:layout_marginStart="91dp" android:layout_marginTop="27dp"
            android:layout_below="@+id/textView9"/>
    <TextView
            android:text="@string/Bbalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="69dp" android:id="@+id/textView10"
            android:layout_marginTop="46dp" android:textSize="24sp" android:layout_below="@+id/editText"
            android:layout_alignParentEnd="true" android:layout_marginEnd="148dp"/>
    <EditText
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="90dp"
            android:id="@+id/editText2" android:layout_marginTop="27dp" android:layout_below="@+id/textView10"
            android:layout_alignParentEnd="true" android:layout_marginEnd="108dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="253dp" android:layout_alignParentStart="true"
            android:layout_marginStart="35dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="97dp" android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp" android:layout_below="@+id/textView11">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </LinearLayout>
    </android.support.v7.widget.RecyclerView>
    <TextView
            android:text="@string/shared_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="69dp" android:id="@+id/textView11"
            android:layout_marginTop="24dp" android:textSize="24sp" android:layout_below="@+id/editText2"
            android:layout_toStartOf="@+id/switch1" android:layout_marginEnd="36dp"/>
    <Switch
            android:layout_width="67dp"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp" android:id="@+id/switch1"
            android:layout_marginTop="30dp" android:layout_below="@+id/editText2"/>
    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp" android:layout_alignParentEnd="true" android:layout_marginEnd="29dp"
            android:layout_alignParentBottom="true" android:id="@+id/imageButton" android:layout_marginBottom="11dp"
            android:background="@drawable/add"/>
</RelativeLayout>