<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".cardAccount">
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="182dp" android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" android:layout_alignParentTop="true" android:layout_marginTop="31dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="13dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="177dp">

            <TextView
                    android:text="Account:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="33dp" android:layout_alignParentTop="true" android:id="@+id/textView2"
                    android:layout_marginTop="52dp" android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" android:layout_marginEnd="67dp" android:id="@+id/textView6"
                    android:layout_marginTop="48dp" android:textSize="24sp"/>
            <TextView
                    android:text="Amount:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView7" android:layout_marginTop="31dp"
                    android:layout_below="@+id/textView2" android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="69dp" android:id="@+id/textView8"
                    android:layout_marginTop="33dp"
                    android:layout_below="@+id/textView6" android:textSize="24sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>