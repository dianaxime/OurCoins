<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".NewGroup">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="52dp" android:layout_alignParentTop="true" android:id="@+id/textView17"
            android:layout_marginTop="67dp" android:textSize="24sp" android:text="@string/Groupname"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_marginEnd="70dp"
            android:id="@+id/editText4" android:layout_marginTop="26dp" android:layout_below="@+id/textView17"/>
    <ImageButton
            android:id="@+id/imageButton6"
            android:layout_marginTop="33dp" android:background="@drawable/addicon" android:layout_width="75dp"
            android:layout_height="75dp" android:layout_below="@+id/editText4"
            android:layout_toEndOf="@+id/imageButton7" android:layout_marginStart="40dp"/>
    <ImageButton
            android:layout_alignParentStart="true"
            android:layout_marginStart="170dp" android:id="@+id/imageButton7"
            android:layout_marginTop="36dp" android:background="@drawable/addperson" android:layout_width="75dp"
            android:layout_height="75dp" android:layout_below="@+id/editText4"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="335dp"
            android:layout_height="349dp" android:layout_alignParentStart="true"
            android:layout_marginStart="43dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp" android:layout_marginTop="31dp"
            android:layout_below="@+id/imageButton7">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </LinearLayout>
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>