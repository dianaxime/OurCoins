<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Statistics">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp" android:layout_margin="30dp" android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_marginBottom="20dp">
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="433dp"
                android:layout_height="match_parent" android:layout_alignStart="@+id/null">
            <TextView
                    android:text="STATISTICS"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="30sp"
                    android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>
            <ImageView
                    android:src="@drawable/graphic"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" android:id="@+id/imageView5"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>