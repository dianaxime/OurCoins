<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".CardGroup">
    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="162dp" android:layout_alignParentStart="true"
            android:layout_marginStart="3dp" android:layout_alignParentTop="true" android:layout_marginTop="25dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/common_google_signin_btn_icon_dark"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:layout_alignParentStart="true"
                    android:layout_marginStart="34dp" android:layout_alignParentBottom="true"
                    android:id="@+id/imageView4" android:layout_marginBottom="24dp" android:layout_marginTop="32dp"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:text="Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp" android:layout_alignParentTop="true" android:id="@+id/textView14"
                    android:layout_marginTop="54dp" android:layout_toEndOf="@+id/imageView4" android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="73dp" android:layout_alignParentBottom="true"
                    android:id="@+id/textView15" android:layout_marginBottom="18dp" android:textSize="24sp"
                    android:layout_marginTop="24dp" android:layout_below="@+id/textView14"/>
            <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="50dp" android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" android:layout_marginEnd="33dp" android:id="@+id/imageButton3"
                    android:layout_marginTop="30dp" android:background="@drawable/edit1"
                    android:layout_toEndOf="@+id/textView14" android:layout_marginStart="53dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>